@using Agency.Web.Models.Domain.Dto
@model IEnumerable<PropertyDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Properties List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-action="PropertyCreate" class="btn btn-outline-primary">
                    <i class="bi bi-plus-square"></i> Create New Property
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Address</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Rooms</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="Property Image" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@item.Address</td>
                        <td>@item.Location</td>
                        <td>$@item.Price</td>
                        <td>@item.Type</td>
                        <td>@item.NumberOfRooms</td>
                        <td>@item.Status</td>
                        <td>
                            <a class="btn btn-success" asp-action="PropertyEdit" asp-route-propertyId="@item.PropertyId">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="btn btn-danger" asp-action="PropertyDelete" asp-route-propertyId="@item.PropertyId">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
